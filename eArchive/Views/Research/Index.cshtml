@model IEnumerable<Research>

@{
    ViewData["Title"] = "Researches";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Title
                                    <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="https://i.ibb.co/r67kRm7/research-cover.jpg" alt="@item.Title" width="100%">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"> </p>
                            <p class="card-text"><b>Short Abstract: </b>@item.Abstract</p>
                            <p class="card-text"><b>Keywords: </b>@item.Keywords</p>
                            <p class="card-text"><b>Publish Year: </b>@item.PublishYear</p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <br />
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>